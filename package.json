{
	"name": "explorer-format",
	"version": "1.0.0",
	"license": "MIT",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"serve": "nodemon ./bin/dev-server",
		"watch": "parcel watch",
		"build": "parcel build",
		"build-format": "parcel build && ./bin/build-format",
		"build-basic": "yarn build-format && extwee -c -i tests/test-stories/basic.twee -o tests/test-stories/output/index.html -s dist/format.js"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "2.7.0",
		"@types/fabric": "^4.5.12",
		"extwee": "^2.0.6",
		"nodemon": "^2.0.20",
		"parcel": "^2.7.0"
	},
	"source": [
		"src/index.ts",
		"src/css/main.scss",
		"tests/test-stories/storycss.scss"
	],
	"targets": {
		"default": {
			"distDir": "build",
			"sourceMap": {
				"inline": true
			},
			"context": "browser"
		}
	},
	"dependencies": {
		"fabric": "^5.2.4",
		"handlebars": "^4.7.7",
		"marked": "^4.1.0",
		"serve-handler": "^6.1.3"
	},
	"alias": {
		"buffer": false
	},
	"nodemonConfig": {
		"ext": "scss,ts,twee,hbs",
		"verbose": true,
		"ignore": [
			"**/build/**",
			"**/dist/**",
			"**/tests/test-stories/output/**"
		]
	}
}
